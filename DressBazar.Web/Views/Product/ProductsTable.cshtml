@model List<DressBazar.Entities.Product>
@{
    ViewBag.Title = "ProductsTable";
}

<h2>ProductsTable</h2>
<div>
    <form method="post">
        <input id="txtsearch" name="search"/>
        <button type="button" id="searchBtn">Search</button>
        <button type="button" id="newBtn">New</button>
    </form>
</div>
<table>
    <thead>
        <tr>
            <td>Product Name</td>
            <td>Category</td>
            <td>Price</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>-</td>
                <td>@item.price</td>
                <td>
                    <button class="editBtn" data-id="@item.ID">Edit</button>
                    <button class="deleteBtn" data-id="@item.ID">Delete</button>
                </td>
            </tr>
        }

    </tbody>
</table>

<script>
    ///  alert('asad');
    $('#searchBtn').click(function () {
      
        var searchValue = $('#txtsearch').val();
       // alert(searchValue);
        $.ajax({  
            type: "POST",  
            url: "/Product/ProductsTable",
            //data: JSON.stringify(searchValue),
            data:{search:searchValue},
           // dataType: "json"  ,
            //contentType: 'application/json; charset=utf-8',  
        success: function(data) {  
            alert(data);
            $('#asad').html(data);
        },  
        error: function() {  
            alert("Error occured!!")  
        }  
    });  
      
    });


    $('#newBtn').click(function () {

       
        // alert(searchValue);
        $.ajax({
            type: "GET",
            url: "/Product/Create",
            //data: JSON.stringify(searchValue),
           // data: { search: searchValue },
            // dataType: "json"  ,
            //contentType: 'application/json; charset=utf-8',  
            success: function (data) {
                alert(data);
                $('#newFormData').html(data);
            },
            error: function () {
                alert("Error occured!!")
            }
        });

    });
    $('.editBtn').click(function () {

        //debugger;
        // alert(searchValue);
        $.ajax({
            type: "GET",
            url: "/Product/Edit",
            data:{id: $(this).attr("data-id")},            
            success: function (data) {
                alert(data);
                $('#newFormData').html(data);
            },
            error: function () {
                alert("Error occured!!")
            }
        });

    });
    $('.deleteBtn').click(function () {
        var a = confirm("Are you sure ?");
        //debugger;
        // alert(searchValue);
        if (a)
        {
            $.ajax({
                type: "POST",
                url: "/Product/delete",
                data: { id: $(this).attr("data-id") },
                success: function (data) {
                    alert(data);
                    $('#asad').html(data);
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        }
      

    });

</script>
